{
  "name": "kilig-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Kilig - AI-Powered Scientific Video Generation Platform",
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "build:shared": "pnpm --filter @kilig/shared build",
    "build:backend": "pnpm --filter @kilig/backend build",
    "build:frontend": "pnpm --filter @kilig/frontend build",
    "dev": "pnpm -r --parallel dev",
    "dev:backend": "pnpm --filter @kilig/backend dev",
    "dev:frontend": "pnpm --filter @kilig/frontend dev",
    "start": "pnpm --filter @kilig/backend start",
    "test": "pnpm -r test",
    "test:pipeline": "pnpm --filter @kilig/backend test:pipeline",
    "test:skills": "pnpm --filter @kilig/backend test:skills",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r exec rm -rf dist node_modules"
  },
  "devDependencies": {
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@10.27.0"
}